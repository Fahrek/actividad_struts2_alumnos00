<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.ui.theme" value="xhtml"/>
    <constant name="struts.devMode" value="true"/>

    <package name="org.demo.actions" namespace="/" extends="struts-default">
        <action name="registry" class="org.demo.actions.RegistryAction" method="execute">
            <result name="success">registerDone.jsp</result>
        </action>
        <action name="invoice" class="org.demo.actions.InvoiceAction" method="execute">
            <result name="success">welcome.jsp</result>
            <param name="invoiceBean"/>
            <result name="input">registryForm.jsp</result>
        </action>
        <action name="student" class="org.demo.actions.StudentAction" method="execute">
            <result name="success">resgisterDone.jsp</result>
            <param name="studentBean"/>
            <result name="input">registerStudent.jsp</result>
        </action>
        <action name="showStudent" class="org.demo.actions.StudentAction">
            <result name="input">showStudent.jsp</result>
            <result name="success">studentDetails.jsp</result>
        </action>
        <action name="registerStudent" class="org.demo.actions.StudentAction">
            <result name="input">registerStudent.jsp</result>
            <result name="success">registerDone.jsp</result>
        </action>
    </package>
</struts>
